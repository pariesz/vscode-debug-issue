{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--colors",
                "--inspect-brk",
                "*.test.ts"
            ],
            "runtimeArgs": [
                "--experimental-specifier-resolution=node",
                "--experimental-loader", "./loader.mjs",
                "--experimental-loader", "ts-node/esm",
                "--no-warnings"
            ]
        }
    ]
}